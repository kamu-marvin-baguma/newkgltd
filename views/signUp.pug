doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title signup
  link(rel='stylesheet' href='')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  style(type="text/css").
body 
  .container(style='padding-left:20%;')
    .row 
      .col(style='color:red;')
        h4 Registration form
        br
        
        form.col-6(method="POST" action="/signup"  name="myform" onsubmit="return validationForm()" style="border:2px solid black; border-radius:10px; height:500px; padding:20px 15px;background-color:orange;")
          .mb-3
              label.form-label(for='fullname' style='color:white;')  fullname
                  input#fullname.form-control(type='text' name='fullname' style='justify-content:center;')
                  //- .mb-3
                  //- label.form-label(for='Username') Username
                  //- input#Username.form-control(type='text' name='Username')
                  .mb-3
                  label.form-label(for='email') email
                  input#email.form-control(type='email' name='email' required)
                  
                  .mb-3
                  label.form-label(for='password') Password
                  input#password.form-control(type='Password' name='password')
                  .mb-3
                  label.form-label(for='produceType') Branch 
                  select#branch.form-select(name='branch' type='text' required)
                    option(selected='')
                    option(value='Kisasi') Kisasi 
                    option(value='Namugongo') Namugongo
                    option(value='HeadOffice') Head  Office
                  .mb-3
                  label.form-label(for='role')  Role
                  select#role.form-select(name='role' type='text' required)
                    option(selected='')
                    option(value='director') Director 
                    option(value='manager') Manager 
                    option(value='SalesAgent') Sales Agent
                  button.btn.btn-primary(type='submit' value='submit' style='margin-top:5px;') Submit
      script(src='signUp.js')  
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')