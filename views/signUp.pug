doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title signup
  //- link(rel='stylesheet' href='')
  //- link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
body 
  .container
    .row 
      .col
        h3 AUTHENTICATION 
        h4 User registration form
        br
        
        form.col-6(method="POST" action="/signup" style="background-color:orange; color:white; width:200px; height:0%; " name="myform" onsubmit="return validationForm()")
          .mb-3
              label.form-label(for='fullname')  fullname
                  input#fullname.form-control(type='text' name='fullname')
                  //- .mb-3
                  //- label.form-label(for='Username') Username
                  //- input#Username.form-control(type='text' name='Username')
                  .mb-3
                  label.form-label(for='Email') email
                  input#Email.form-control(type='Email' name='Email')
                  
                  .mb-3
                  label.form-label(for='password') Password
                  input#password.form-control(type='Password' name='password')
                  .mb-3
                  label.form-label(for='branch') Branch 
                  input#branch.form-control(type='text' name='branch')
                  .mb-3
                  label.form-label(for='role') Role
                  input#role.form-control(type='text' name='role')
                  button.btn.btn-primary(type='submit' value='submit') Submit
      script(src='signUp.js')  
