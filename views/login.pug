doctype html
head
  title login form
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  link(rel='stylesheet' href='/styles/css/style.css')
  .container 
  .login-form
    h1(style='text-align: center') Login Form
    form(action='/login' name='myform' method='POST')
      div
        label(for='fullname') fullname:
        input#fullname(type='text' size='60' name='fullname')
        small(name='fullname')
      br
      div
        label(for='email') Email Address:
        input#email(type='email' size='60' name='email')
        small.error
      br
      div
        label(for='Password') Password:
        input#password(type='password' size='60' name='password')
        small.error
      br
      div
        button#submit-btn.btn.btn-primary(value='submit' onclick='return validationForm()')
          | Submit
        small
        p
          Dont Have No Account? 
          span
          a(href="/signup", style='color:red; text-decoration:none; hover:white;')  Sign Up
  script(src='/javascript/js/login.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js')