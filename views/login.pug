doctype html
head
  title login form
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  link(rel='stylesheet' href='/styles/css/style.css')
  .container 
  .login-form
    h1(style='text-align: center') Login Form
    form(action='/login' name='myform' method='POST')
      div
        label(for='userName') Username:
        input#userName(type='text' size='60' name='userName')
        small(name='nameerr')
      br
      div
        label(for='E-mail') E-mail Address:
        input#E-mail(type='text' size='60' name='Email')
        small.error
      br
      div
        label(for='Password') Password:
        input#Password(type='Password' size='60' name='Password')
        small.error
      br
      div
        button#submit-btn.btn.btn-primary(value='submit' onclick='return validationForm()')
          | Submit
        small
        p
          Dont Have No Account? 
          span  Sign Up
  script(src='/javascript/js/login.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js')