doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js')
        link(rel='stylesheet' href='/styles/css/bootstrap.css')
        link(rel='stylesheet' href='creditsales-list.css')
    body
        nav.navbar.navbar-light.bg-light
            .container-fluid
                a.navbar-brand Karibu Groceries Ltd
                a.links(href='index') Home
                a.links(href='') Dashboard
                a.links(href='credit')  New Credit
                a.links(href='credit-list') creditsales list
                form.d-flex
                    input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
                    button.btn(type='submit') Search
        .container
            h2.list creditsales List
            | Branch:
            a.btn.btn-warning(href="/logout" style='float:right;') Log out

            if credits.length
                table.table.table-dark.table-striped                   
                        tr
                            th(scope='col') Produce Name
                            th(scope='col') Produce Type
                            th(scope='col') Name of Dealer
                            th(scope='col') Sales Agent 
                            th(scope='col') Amount Due(Ugx)
                            th(scope='col') Tonnage(kgs)
                            th(scope='col') Date of Dispatch
                            th(scope='col') Due Date
                            th(scope='col') Location
                            th(scope='col') Contact Number
                            th(scope='col') National Id
                            th Delete 
                            th Edit
                    tbody
                    each credit in credits      
                        tr
                            td #{credit.produceNamee}
                            td #{credit.produceType}
                            td #{credit.nameOfDealer}
                            td #{credit.salesAgent}
                            td #{credit.AmountDue}
                            td #{credit.tonnage}
                            td #{credit.dispatchDate}
                            td #{credit.DueDate}
                            td #{credit.location}
                            td #{credit.contactNumber}
                            td #{credit.nationalId}
                            td 
                                form(method="POST",Action="/credit-list")
                                    input(type="hidden",name="_id",value=credit._id)
                                    button(type="submit") &#xf2ed;
                            td 
                                a(href="/editcredit" + credit._id) &#xf303; 
            else                                
                p There are no registered credits
            script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js')