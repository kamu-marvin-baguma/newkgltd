extends ./layout
block content 
  .container
    h2.list sales list
    h5="list"
    a.btn.btn-warning(href="/logout") Log out
    | Branch:
    p Total sales: #{totalSales.totalRevenue}
    p Tonnage: #{totalSales.totalTonnage}
    p Total Purchases: #{totalPurchase.totalExpense}
    p Difference: #{totalRevenue} - #{totalExpense}
    if sales.length 
      table.table.table-dark.table-striped
        thead.thead
          tr 
            th(scope='col')  Product Name
            th(scope='col')  Branch 
            th(scope='col')  Sales Agent
            th(scope='col')  Tonnage(1000kgs)
            th(scope='col')  Amount paid(Ugx)
            th(scope='col')  Branch
            th(scope='col')  Date
            th(scope='col')  Time
            th(scope='col')  Name of Buyer
            th(scope='col') Delete
            th(scope='col') Edit
    
        tbody
        each sale  in sales 
          tr
            td #{sale.produceName}
            td #{sale.branch}
            td #{sale.salesAgent}
            td #{sale.tonnage}
            td #{sale.AmountPaid}
            td #{sale.branch}
            td #{moment(sales.Date).format("DD-MM-YYYY")}
            td #{sale.Time}
            td #{sale. nameOfDealer}
            td 
                form(method="POST",Action="/sales-list")
                  input(type="hidden",name="_id",value=sale._id)
                  button(type="submit") &#xf2ed;
                      td 
            td 
                a(href="/editsales"+sales._id) &#xf2ed;
    else 
    p There are no registered sales
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js')